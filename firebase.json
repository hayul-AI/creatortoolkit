{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      ".github/**",
      ".idx/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/api/generate-thumbnail-image",
        "function": "generateThumbnailImage"
      },
      {
        "source": "!**/*.{js,css,png,jpg,jpeg,gif,svg,ico,json,txt,xml}",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
